            <string>///Estados e movimentacao

//Movimentacao basica
vx+=dir;
vy+=cim;
vx = clamp(vx,-velMax,velMax);
vy = clamp(vy,-velMax,velMax);
vx*=0.8;
vy*=0.8;
podeColidir = true;
var estado = Estado;

//Estado
switch (Estado) {
    case Parado:
        pulaDash = false;
        if (dir != 0 || cim != 0) {Estado = Anda;}
        player_dash();
        player_pula();
        player_usa_arma();
    break;
    
    
    case Anda:
        if (dir == 0 &amp;&amp; cim == 0) {Estado = Parado;}
        player_pula();
        player_dash();
        movimenta_geral(vx,vy);
        define_dir();
        player_usa_arma();
    break;
    
    case Dash:
        if (dashDir == 0) &amp;&amp; (dashCim == 0){
            dashDir = lengthdir_x(2,get_dir());
            dashCim = lengthdir_y(2,get_dir());
        }
        
        if (contador_conta(20)){
            dashou = true;
            if z!=0{
                vz = 0;
                Estado = Pula;
            } else {
                Estado = Parado;
            }
        }
        if z!=0{
            podeColidir = false;
        }else{
            if player_pula(){pulaDash = true;}
            player_usa_arma();
        }
        movimenta_geral(dashDir*velMax,dashCim*velMax);
        
    break;
    
    case Ataca:
        //Altera o estado no animation end
        player_dash();
        player_usa_arma();
        var vel = (image_number - image_index)/image_number;
        var sp = 2;
        var dx = (vx+lengthdir_x(sp,get_dir()))*vel;
        var dy = (vy+lengthdir_y(sp,get_dir()))*vel;
        
        dx = clamp(dx,-sp,sp);
        dy = clamp(dy,-sp,sp);
        
        movimenta_geral(dx,dy);
    break;
    
    
    case AtacaPesado:
        if (!bater_direct) {
            Estado = Parado;
            var xx = x + lengthdir_x(50,get_dir());
            var yy = y + lengthdir_y(50,get_dir());
            instance_create(xx,yy,obj_ataquepesado);
        }
        movimenta_geral(vx*0.3,vy*0.3);
    break;
    
    case Pula:
        podeColidir = false;
        define_dir();
        var mult = 1;
        if pulaDash{mult = 2;}
        movimenta_geral(vx*mult,vy*mult);
        if (pulando &amp;&amp; vz &gt; 3){vz = 3;}
        vz+=0.45;
        z+=vz;      
        if z &gt; 0{z = 0;}  
        if (z &gt;= 0){z = 0;if (!place_meeting(x,y,Colide)){Estado = Parado;}} 
        if (z &lt; 0) &amp;&amp; (bater){Estado = CaiPesado;}
        if (!dashou){
            if player_dash(){z-=0.1;}
        }
    break;
    
    case CaiPesado:
        invisivel = false;
        podeColidir = false;
        vz+=1.1;
        z+=vz;        
        if (z &gt;= 0){
            z = 0;
            instance_create(x,y,obj_ataquepesado);
            if !place_meeting(x,y,Colide){
                Estado = Parado;
            } else {
                Estado = Pula;
            }
        }
        
    break;
    
    case Escudado:
        player_usa_arma();
        if (!escuda) {
            Estado = Parado;
            //Deleta escudo
            with(esc){instance_destroy();}
        }
        movimenta_geral(vx*0.5,vy*0.5);
    break;
    
    case Mira:
        player_usa_arma();
        if !mirando {
            Estado = Parado;
            //Deleta mosquete
            with (rifle) {instance_destroy();}
            //cria tiro
            var obj = obj_tiro;
            if (contMosq &gt; 30){obj = obj_tiro2;}
            if (contMosq &gt;= 60){obj = obj_tiro3;}
            tiro = instance_create(x+lengthdir_x(60,get_dir()),y+lengthdir_y(60,get_dir()),obj);
            tiro.image_angle = get_dir();
        } else {
            contMosq++;
            if (contMosq &gt; 120){contMosq = 120;}
        }
        movimenta_geral(vx*0.5,vy*0.5);
    break;
}

depth_atualiza();
player_nos_limites_da_view();

if estado!=Estado{
    contador_zera();
    contMosq = 0;
    if (Estado != Ataca){ataque = 0;}
}

if invisivel{mana-=0.05;if (mana &lt;=0){invisivel = false;}}
if (Estado != Pula &amp;&amp; Estado != Dash){dashou = false;}


if (mana&lt;prevMana){
    prevMana = mana;
    contMana = 60;
}

if (contMana &gt; 0){
    contMana--;
} else if (contMana == 0){
    mana+=0.2;
    if (mana &gt;= maxMana){mana = maxMana;contMana = -1;}
    prevMana = mana;
}


player_troca_arma();
</string>
